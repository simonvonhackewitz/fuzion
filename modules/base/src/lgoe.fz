# lower -- unit feature to denote the result of a comparion
#
public lower is

# greater -- unit feature to denote the result of a comparion
#
public greater is

# equal -- unit feature to denote the result of a comparion
#
public equal is


# choice of lower greater or equal
#
public lgoe : choice lower greater equal, property.equatable is

  # maps lgoe to a number
  #
  # lower => -1
  # greater => +1
  # equal => 0
  #
  public as_num =>
    match lgoe.this
      lower => -1
      greater => +1
      equal => 0


  public fixed redef type.equality(a, b lgoe) bool =>
    match a
      lower =>
        match b
          lower => true
          * => false
      greater =>
        match b
          greater => true
          * => false
      equal =>
        match b
          equal => true
          * => false



  # human readable string of this choice
  #
  public redef as_string =>
    match lgoe.this
      lower => "lower"
      greater => "greater"
      equal => "equal"


