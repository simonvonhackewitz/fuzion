# definition of signals that can be sent to a process
#
public signal : choice sig_hup sig_int sig_quit sig_ill sig_trap sig_abrt sig_fpe sig_kill sig_segv sig_pipe sig_alrm sig_term is

  module as_i32 i32 =>
    match signal.this
      sig_hup  => 1
      sig_int  => 2
      sig_quit => 3
      sig_ill  => 4
      sig_trap => 5
      sig_abrt => 6
      sig_fpe  => 8
      sig_kill => 9
      sig_segv => 11
      sig_pipe => 13
      sig_alrm => 14
      sig_term => 15
